{
  "paramsOrder": [
    "_defaultAdmin",
    "name",
    "symbol",
    "_token",
    "_tokenOwner",
    "contractURI",
    "trustedForwarders",
    "saleRecipient",
    "platformFeeRecipient",
    "platformFeeBps"
  ],
  "output": [
    {
      "name": "params",
      "fields": [
        { "name": "_defaultAdmin" },
        { "name": "name" },
        { "name": "symbol" },
        { "name": "_token" },
        { "name": "_tokenOwner" },
        {
          "type": "server-file",
          "name": "contractURI",
          "fields": ["name", "description", "image"]
        },
        { "name": "trustedForwarders" },
        { "name": "saleRecipient" },
        { "name": "platformFeeRecipient" },
        { "name": "platformFeeBps" }
      ]
    }
  ],
  "form": [
    {
      "type": "input",
      "ref": "_defaultAdmin",
      "label": "_admin",
      "component": { "type": "hidden", "subtype": "connected-address" },
      "locked": false
    },
    {
      "type": "input",
      "ref": "image",
      "label": "Image",
      "component": { "type": "image-url" },
      "locked": false,
      "col": {
        "sm": 2
      }
    },
    {
      "type": "input-group",
      "col": { "sm": 10 },
      "inputs": [
        {
          "type": "input",
          "ref": "name",
          "label": "Name",
          "locked": false,
          "col": {
            "sm": 9
          }
        },
        {
          "type": "input",
          "ref": "symbol",
          "label": "Symbol",
          "locked": false,
          "col": {
            "sm": 3
          }
        },
        {
          "type": "input",
          "ref": "description",
          "label": "Description",
          "locked": false
        }
      ]
    },
    {
      "type": "input",
      "ref": "trustedForwarders",
      "label": "Trusted Forwarders",
      "defaultValue": { "ref": "trustedForwarders" },
      "locked": false,
      "component": {
        "type": "hidden"
      }
    },
    {
      "type": "input",
      "ref": "_token",
      "label": "Token Address",
      "helperText": "Address of the token for the presale",
      "locked": false,
      "component": {
        "type": "address"
      }
    },
    {
      "type": "input",
      "ref": "_tokenOwner",
      "label": "Token Owner",
      "helperText": "Address of the token owner where from where tokens will be sold. This address needs to give allowance on this drop contract to claim conditions work",
      "locked": false,
      "component": {
        "type": "address"
      }
    },

    {
      "type": "input",
      "ref": "saleRecipient",
      "label": "Sale Recipient",
      "locked": false,
      "component": {
        "type": "address",
        "subtype": "connected-address"
      }
    },
     {
    "type": "input",
    "ref": "platformFeeRecipient",
    "defaultValue": "0x5265Bde27F57E738bE6c1F6AB3544e82cdc92a8f",
    "locked": false,
    "component": {
      "type": "hidden"
    }
  },
  {
    "type": "input",
    "ref": "platformFeeBps",
    "defaultValue": 100,
    "locked": false,
    "component": {
      "type": "hidden"
    }
  }
   
  ],
  "name": "DropAllowanceERC20",
  "description": "Extends version of DropERC20 allowing users to set the token they want to sell."
}
